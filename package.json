{
    "name": "snippy-snippets",
    "displayName": "Snippy Snippets Manager",
    "description": "Snippy Snippets Manager for VSCode",
    "version": "1.0.1",
    "publisher": "Peter Csipkay",
    "repository": {
        "type": "git",
        "url": "https://github.com/csipkay/snippy-snippets"
    },
    "bugs": {
        "url": "https://github.com/csipkay/snippy-snippets/issues"
    },
    "homepage": "https://github.com/csipkay/snippy-snippets#readme",
    "author": {
        "name": "Peter Csipkay"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onView:snippetsExplorer",
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "snippets-explorer",
                    "title": "Snippy Snippets Manager",
                    "icon": "resources/snippets.svg"
                }
            ]
        },
        "views": {
            "snippets-explorer": [
                {
                    "id": "snippetsExplorer",
                    "name": "Snippy"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "snippets.search",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@1"
                },
                {
                    "command": "snippets.clearSearch",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@2"
                },
                {
                    "command": "snippets.addFolder",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "snippets.manageSettings",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@4"
                }
            ],
            "view/item/context": [
                {
                    "command": "snippets.addSnippet",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "inline"
                },
                {
                    "command": "snippets.deleteItem",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "inline"
                },
                {
                    "command": "snippets.deleteItem",
                    "when": "view == snippetsExplorer && viewItem == snippet",
                    "group": "inline"
                },
                {
                    "command": "snippets.renameFolder",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "1_modification"
                },
                {
                    "command": "snippets.renameSnippet",
                    "when": "view == snippetsExplorer && viewItem == snippet",
                    "group": "1_modification"
                }
            ],
            "commandPalette": [
                {
                    "command": "snippets.importSnippets",
                    "when": "view == snippetsExplorer"
                },
                {
                    "command": "snippets.exportSnippets",
                    "when": "view == snippetsExplorer"
                }
            ],
            "snippets.settingsMenu": [
                {
                    "command": "snippets.importSnippets",
                    "group": "data@1"
                },
                {
                    "command": "snippets.exportSnippets",
                    "group": "data@2"
                }
            ]
        },
        "commands": [
            {
                "command": "snippets.search",
                "title": "Search Snippets",
                "icon": "$(search)"
            },
            {
                "command": "snippets.clearSearch",
                "title": "Clear Search",
                "icon": "$(clear-all)"
            },
            {
                "command": "snippets.addFolder",
                "title": "Add Folder",
                "icon": "$(add)"
            },
            {
                "command": "snippets.addSnippet",
                "title": "Add Snippet",
                "icon": "$(add)"
            },
            {
                "command": "snippets.deleteItem",
                "title": "Delete",
                "icon": "$(trash)"
            },
            {
                "command": "snippets.openSnippet",
                "title": "Open Snippet"
            },
            {
                "command": "snippets.renameFolder",
                "title": "Rename Folder",
                "icon": "$(edit)"
            },
            {
                "command": "snippets.renameSnippet",
                "title": "Rename Snippet",
                "icon": "$(edit)"
            },
            {
                "command": "snippets.configureSync",
                "title": "Configure GitHub Sync"
            },
            {
                "command": "snippets.pushToGist",
                "title": "Push to GitHub Gist",
                "icon": "$(cloud-upload)"
            },
            {
                "command": "snippets.pullFromGist",
                "title": "Pull from GitHub Gist",
                "icon": "$(cloud-download)"
            },
            {
                "command": "snippets.manageGitHubToken",
                "title": "Manage GitHub Token",
                "icon": "$(key)"
            },
            {
                "command": "snippets.resetGithubConfig",
                "title": "Reset GitHub Configuration"
            },
            {
                "command": "snippets.configureBackupFolder",
                "title": "Configure Backup Folder",
                "icon": "$(folder)"
            },
            {
                "command": "snippets.importSnippets",
                "title": "Import Snippets",
                "category": "Snippets"
            },
            {
                "command": "snippets.exportSnippets",
                "title": "Export Snippets",
                "category": "Snippets"
            },
            {
                "command": "snippets.manageSettings",
                "title": "Manage Settings",
                "icon": "$(gear)"
            }
        ],
        "configuration": {
            "title": "Code Snippets Manager",
            "properties": {
                "snippets.githubToken": {
                    "type": "string",
                    "description": "GitHub Personal Access Token for Gist synchronization",
                    "scope": "application"
                },
                "snippets.gistMapping": {
                    "type": "object",
                    "description": "Mapping of snippet IDs to their corresponding Gist IDs",
                    "scope": "application",
                    "default": {}
                },
                "snippets.backupFolder": {
                    "type": "string",
                    "default": "",
                    "description": "Folder path where snippet backups will be saved"
                },
                "snippets.storageLocation": {
                    "type": "string",
                    "default": "",
                    "description": "Directory where snippets and their data will be stored"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^16.18.123",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.49.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@types/axios": "^0.9.36",
        "axios": "^1.7.9",
        "monaco-editor": "^0.52.2"
    }
}