{
    "name": "code-snippets-manager-snippy",
    "displayName": "Code Snippets Manager - Snippy",
    "description": "A powerful code snippets manager for VS Code",
    "version": "1.0.4",
    "publisher": "petercsipkay",
    "icon": "resources/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/csipkay/snippy-snippets"
    },
    "bugs": {
        "url": "https://github.com/csipkay/snippy-snippets/issues"
    },
    "homepage": "https://github.com/csipkay/snippy-snippets#readme",
    "author": {
        "name": "Peter Csipkay"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "snippets-explorer",
                    "title": "Code Snippets Manager",
                    "icon": "resources/logo.svg"
                }
            ]
        },
        "views": {
            "snippets-explorer": [
                {
                    "id": "snippetsExplorer",
                    "name": "Snippy",
                    "icon": "resources/snippets.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "snippets.addFolder",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@1"
                },
                {
                    "command": "snippets.search",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@2"
                },
                {
                    "command": "snippets.clearSearch",
                    "when": "view == snippetsExplorer && snippets:hasSearchQuery",
                    "group": "navigation@3"
                },
                {
                    "command": "snippets.manageSettings",
                    "when": "view == snippetsExplorer",
                    "group": "navigation@4"
                }
            ],
            "view/item/context": [
                {
                    "command": "snippets.addSubfolder",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "inline@1"
                },
                {
                    "command": "snippets.addSnippet",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "inline@2"
                },
                {
                    "command": "snippets.deleteItem",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "inline@3"
                },
                {
                    "command": "snippets.deleteItem",
                    "when": "view == snippetsExplorer && viewItem == snippet",
                    "group": "inline"
                },
                {
                    "command": "snippets.addSubfolder",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "1_creation@1"
                },
                {
                    "command": "snippets.addSnippet",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "1_creation@2"
                },
                {
                    "command": "snippets.renameFolder",
                    "when": "view == snippetsExplorer && viewItem == folder",
                    "group": "1_modification"
                },
                {
                    "command": "snippets.renameSnippet",
                    "when": "view == snippetsExplorer && viewItem == snippet",
                    "group": "1_modification"
                }
            ]
        },
        "commands": [
            {
                "command": "snippets.search",
                "title": "Search Snippets",
                "icon": "$(search)"
            },
            {
                "command": "snippets.clearSearch",
                "title": "Clear Search",
                "icon": "$(clear-all)"
            },
            {
                "command": "snippets.manageSettings",
                "title": "Manage Settings",
                "icon": "$(gear)"
            },
            {
                "command": "snippets.addFolder",
                "title": "Add Folder",
                "icon": "$(add)"
            },
            {
                "command": "snippets.addSubfolder",
                "title": "Add Subfolder",
                "icon": "$(new-folder)"
            },
            {
                "command": "snippets.addSnippet",
                "title": "Add Snippet",
                "icon": "$(new-file)"
            },
            {
                "command": "snippets.deleteItem",
                "title": "Delete",
                "icon": "$(trash)"
            },
            {
                "command": "snippets.exportSnippets",
                "title": "Export Snippets",
                "icon": "$(export)"
            },
            {
                "command": "snippets.importSnippets",
                "title": "Import Snippets",
                "icon": "$(import)"
            },
            {
                "command": "snippets.syncFromBackup",
                "title": "Sync from Backup Folder",
                "icon": "$(sync)"
            },
            {
                "command": "snippets.renameFolder",
                "title": "Rename Folder",
                "icon": "$(edit)"
            },
            {
                "command": "snippets.renameSnippet",
                "title": "Rename Snippet",
                "icon": "$(edit)"
            },
            {
                "command": "snippets.configureBackupFolder",
                "title": "Configure Backup Folder"
            }
        ],
        "configuration": {
            "title": "Snippets Manager",
            "properties": {
                "snippets.backupFolder": {
                    "type": "string",
                    "default": "",
                    "description": "Folder path where snippet backups will be saved",
                    "scope": "application"
                },
                "snippets.autoSyncOnStartup": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically sync snippets from backup folder when VS Code starts",
                    "scope": "application"
                },
                "snippets.storageLocation": {
                    "type": "string",
                    "default": "",
                    "description": "Directory where snippets and their data will be stored",
                    "scope": "application"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . --outDir out --watch",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^16.18.123",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.54.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@types/axios": "^0.9.36",
        "axios": "^1.6.2",
        "monaco-editor": "^0.52.2"
    }
}